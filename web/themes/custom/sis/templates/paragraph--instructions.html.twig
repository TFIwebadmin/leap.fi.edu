{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * 
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    'clearfix'
  ]
%}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <h3 class="color-match">{{ content.field_block_title }}</h3>
      {{ content.field_intro }}
      <div class="instructions-flex">
        <div class="instructions-docs">
          {{ content.field_resources }}
        </div>
        <div class="instructions-materials">
          {{ content.field_materials}}
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
